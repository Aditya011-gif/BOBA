# AgriChain Environment Variables Template
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env file to version control!

# ===========================================
# INFURA BLOCKCHAIN CONFIGURATION
# ===========================================
# Get these from: https://infura.io/dashboard
# 1. Create a new project
# 2. Copy your Project ID and Project Secret

# Your Infura Project ID (Required)
INFURA_PROJECT_ID=your_infura_project_id_here

# Your Infura Project Secret (Optional, for enhanced security)
INFURA_PROJECT_SECRET=your_infura_project_secret_here

# ===========================================
# CUSTOM RPC ENDPOINTS (Optional)
# ===========================================
# Override default Infura endpoints if needed

# Ethereum Networks
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_infura_project_id_here
ETHEREUM_SEPOLIA_URL=https://sepolia.infura.io/v3/your_infura_project_id_here
ETHEREUM_GOERLI_URL=https://goerli.infura.io/v3/your_infura_project_id_here

# Polygon Networks
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/your_infura_project_id_here
POLYGON_MUMBAI_URL=https://polygon-mumbai.infura.io/v3/your_infura_project_id_here

# ===========================================
# SMART CONTRACT CONFIGURATION
# ===========================================
# Your deployed smart contract addresses
CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# ===========================================
# OTHER API CREDENTIALS
# ===========================================
# DigiLocker API
DIGILOCKER_CLIENT_ID=your_digilocker_client_id
DIGILOCKER_CLIENT_SECRET=your_digilocker_client_secret

# Razorpay Payment Gateway
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Firebase
FIREBASE_PROJECT_ID=your_firebase_project_id

# Google Maps
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Weather API
WEATHER_API_KEY=your_weather_api_key

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Generate secure random keys for production
JWT_SECRET=your_jwt_secret_minimum_32_characters
ENCRYPTION_KEY=your_32_byte_base64_encoded_encryption_key